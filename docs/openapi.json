  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "required": [
          "title",
          "text",
          "category_id"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "title": {
            "type": "string",
            "example": "rose"
          },
          "text": {
            "type": "string",
            "example": "about flower"
          },
          "created_date": {
            "type": "string",
            "description": "Дата создания статьи",
            "format": "date-time",
            "example": "2019-05-17 14:23:40"
          },
          "updated_date": {
            "type": "string",
            "format": "date-time",
            "description": "Дата изменения статьи",
            "example": "2019-05-17 14:23:40"
          },
          "status": {
            "type": "string",
            "description": "Статус статьи",
            "example": "draft",
            "enum": [
              "published",
              "draft",
              "deleted"
            ]
          },
          "category_id": {
            "type": "integer",
            "format": "int64",
            "example": 2
          },
          "category_name": {
            "type": "string",
            "example": "flower"
          }
        }
      },
      "Category": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "name": {
            "type": "string",
            "example": "flower"
          },
          "description": {
            "type": "string",
            "example": "this category about something"
          }
        }
      },
      "RequestArticleSchema": {
        "type": "object",
        "required": [
          "title",
          "text",
          "category_id"
        ],
        "properties": {
          "title": {
            "type": "string",
            "example": "rose"
          },
          "text": {
            "type": "string",
            "example": "about flower"
          },
          "category_id": {
            "type": "integer",
            "format": "int64",
            "example": 2
          }
        }
      },
      "RequestCategorySchema": {
        "type": "object",
        "required": [
          "name",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "flower"
          },
          "description": {
            "type": "string",
            "example": "this category about something"
          }
        }
      },
      "News": {
        "type": "object",
        "required": [
          "title",
          "description",
          "edition"
        ],
        "properties": {
          "news_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "world cup"
          },
          "description": {
            "type": "string",
            "example": "Argentina won this tournament"
          },
          "created_date": {
            "type": "string",
            "description": "Дата создания статьи",
            "format": "date-time",
            "example": "2019-05-17 14:23:40"
          },
          "updated_date": {
            "type": "string",
            "format": "date-time",
            "description": "Дата изменения статьи",
            "example": "2019-05-17 14:23:40"
          },
          "edition": {
            "type": "string",
            "example": "New York Times"
          },
          "status": {
            "type": "string",
            "description": "Статус статьи",
            "example": "draft",
            "enum": [
              "published",
              "draft",
              "deleted"
            ]
          }
        }
      },
      "RequestNewsSchema": {
        "type": "object",
        "required": [
          "title",
          "description",
          "edition"
        ],
        "properties": {
          "title": {
            "type": "string",
            "example": "world cup"
          },
          "description": {
            "type": "string",
            "example": "Argentina won this tournament"
          },
          "edition": {
            "type": "string",
            "example": "New York Times"
          }
        }
      },
      "PublishSchema": {
        "type": "object",
        "required": [
          "is_published"
        ],
        "properties": {
          "is_published": {
            "type": "boolean",
            "example": true
          }
        }
      }
